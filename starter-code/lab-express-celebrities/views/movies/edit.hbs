<h2>{{title}}</h2>
<form action="/movies/{{movie._id}}" method="post">
	<input type="text" name="title" value="{{movie.title}}" placeholder="Title *" required>
	<input type="text" name="genre" value="{{movie.genre}}" placeholder="Genre">
	<input type="text" name="plot" value="{{movie.plot}}" placeholder="Plot">
	<button type="submit">Edit the movie</button>
</form>