<h2>{{title}}</h2>
<ul>
	{{#each celebrities}}
	<li>
		<a href="celebrities/{{this._id}}">{{this.name}}</a>
		<form action="/celebrities/{{this._id}}/delete" method="post">
			<button type="submit">Delete</button>
		</form>
		<form action="/celebrities/{{this._id}}/edit" method="get">
			<button type="submit">Update</button>
		</form>
	</li>
	{{/each}}
</ul>
<a href="/celebrities/new">Create a new celebrity</a>